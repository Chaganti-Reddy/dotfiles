#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
#	1) setsid -f "$TERMINAL" -e pulsemixer ;;

	1) pamixer -t ;;
	2) pavucontrol ;;
	4) pamixer --allow-boost -i 5 ;;
	5) pamixer --allow-boost -d 5 ;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to open PavuControl.
- Scroll to change." ;;
esac

[ $(pamixer --get-mute) = true ] && echo "ðŸ”‡ M" && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "60" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "20" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

echo "$icon $vol%"
