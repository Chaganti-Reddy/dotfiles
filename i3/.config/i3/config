# update signal i3blocks to refresh volume
set $refresh_volume pkill -RTMIN+10 i3blocks
set $refresh_light pkill -RTMIN+24 i3blocks

bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer --allow-boost -i 3 && $SCRIPT/notify-progress audio && $refresh_volume
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer --allow-boost -d 3 && $SCRIPT/notify-progress audio && $refresh_volume
bindsym XF86AudioMute exec --no-startup-id pamixer -t && $SCRIPT/notify-progress muted && $refresh_volume
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_AUDIO_SOURCE@ toggle && $refresh_volume
bindsym $mod+Mod1+F9 exec --no-startup-id pactl set-source-mute @DEFAULT_AUDIO_SOURCE@ toggle && $refresh_volume

# screen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl s 5%+ && $SCRIPT/notify-progress brightness && $refresh_light
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl s 5%- && $SCRIPT/notify-progress brightness && $refresh_light

# Refresh music block
set $refresh_music pkill -RTMIN+60 i3blocks

# XF86 keys for controlling music playback
