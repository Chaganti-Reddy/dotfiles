#!/usr/bin/env bash

declare -A options
options=(["Edit Config Files"]=~/.dwm/scripts/confedit ["Record The Screen"]=~/.dwm/scripts/sc_record ["Convert Currencies"]=~/.dwm/scripts/currencies ["Open Dictionary"]=~/.dwm/scripts/dict ["Check the IP Address"]=~/.local/bin/dmip ["Kill an Existing Process"]=~/.dwm/scripts/kill ["Open Man Page of an Installed Program"]=~/.dwm/scripts/man ["Pick a color"]=~/.local/bin/dm-colpick ["Set New Background(Change Wallpaper)"]=~/.dwm/scripts/changelook ["Cross check the spelling"]=~/.dwm/scripts/spellcheck ["Translate to Different Language"]=~/.local/bin/dm-translate ["Search Through web(WebSearch)"]=~/.dwm/scripts/websearch ["Look through Arch Wiki Docs"]=~/.dwm/scripts/archwiki ["Connect to BLUETOOTH"]=~/.dwm/scripts/bluetooth ["Open PowerMenu"]=~/.dwm/scripts/power ["Manage TODOs"]=~/.dwm/scripts/todos ["Watch YouTube Videos"]=~/.dwm/scripts/yt ["Insert Font Awesome Icon"]=~/.dwm/scripts/rofi-fontawesome ["Insert Emoji Icon"]=~/.dwm/scripts/emojipick ["Open Youtube Video in MPV using URL"]=~/.dwm/scripts/mpv_yt ["Open Octave"]=~/.dwm/scripts/start_octave ["Watch YouTube Playlists"]=~/.dwm/scripts/yt_plst ["Open Docker Desktop"]=~/.dwm/scripts/docker ["Get Youtube Channel ID"]=~/.dwm/scripts/ytid ["Use Reddit Script for Images"]=~/.dwm/scripts/redyt)

choice=$(printf '%s\n' "${!options[@]}" | sort -g | dmenu -i -l 15 -p 'Choose an Option: ' "${@}")

if [ "$choice" ]; then
	sh "${options[$choice]}"

# What to do if we just escape without choosing anything.
else
	echo "Program terminated." && exit 0
fi
