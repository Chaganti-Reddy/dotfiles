[Default Applications]
# --- Browser (Firefox) ---
text/html=firefox.desktop
x-scheme-handler/http=firefox.desktop
x-scheme-handler/https=firefox.desktop
x-scheme-handler/about=firefox.desktop
x-scheme-handler/unknown=firefox.desktop

# --- File Manager (Dolphin) ---
inode/directory=org.kde.dolphin.desktop;dolphin.desktop;

# --- PDF (Okular) ---
application/pdf=org.kde.okular.desktop;okular.desktop;

# --- Images (Viewnior primary, Sxiv fallback) ---
image/jpeg=viewnior.desktop;sxiv.desktop;
image/png=viewnior.desktop;sxiv.desktop;
image/gif=viewnior.desktop;sxiv.desktop;
image/webp=viewnior.desktop;sxiv.desktop;
image/tiff=viewnior.desktop;sxiv.desktop;
image/bmp=viewnior.desktop;sxiv.desktop;
image/x-icon=viewnior.desktop;sxiv.desktop;
image/svg+xml=viewnior.desktop;sxiv.desktop;

# --- CODING Related (Kate) ---
# C/C++
text/x-c=org.kde.kate.desktop;kate.desktop;
text/x-c++=org.kde.kate.desktop;kate.desktop;
text/x-chdr=org.kde.kate.desktop;kate.desktop;
text/x-csrc=org.kde.kate.desktop;kate.desktop;
# Python
text/x-python=org.kde.kate.desktop;kate.desktop;
application/x-python-code=org.kde.kate.desktop;kate.desktop;
# Web Dev (JS/CSS)
application/javascript=org.kde.kate.desktop;kate.desktop;
text/javascript=org.kde.kate.desktop;kate.desktop;
text/css=org.kde.kate.desktop;kate.desktop;
# Other common languages
text/x-rust=org.kde.kate.desktop;kate.desktop;
text/x-go=org.kde.kate.desktop;kate.desktop;
text/x-java=org.kde.kate.desktop;kate.desktop;
text/x-makefile=org.kde.kate.desktop;kate.desktop;

# --- CONFIGS, LISTS, TXT (Neovim) ---
# Plain text and lists
text/plain=nvim.desktop
# Config formats
application/json=nvim.desktop
application/x-yaml=nvim.desktop
text/x-toml=nvim.desktop
text/x-ini=nvim.desktop
text/x-conf=nvim.desktop
text/x-log=nvim.desktop
# Lua (Since you use Hyprland/Nvim, you likely want Lua configs in Nvim)
text/x-lua=nvim.desktop
# Shell scripts (Often configs, but if you prefer Kate, move this to the section above)
text/x-shellscript=nvim.desktop

# --- Video/Audio (mpv) ---
video/mp4=mpv.desktop
video/x-matroska=mpv.desktop
video/webm=mpv.desktop
audio/mpeg=mpv.desktop
audio/x-wav=mpv.desktop
